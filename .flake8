[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501
select = F,E9,E722
max-complexity = 10
exclude = .git,__pycache__,build,dist,.tox,.pytest_cache,*.egg-info,src/backend/vendor,src/backend/tests/archived
per-file-ignores =
    __init__.py:F401,F403,F405
    src/backend/plume_nav_sim/envs/base_env.py:C901
    src/backend/plume_nav_sim/core/episode_manager.py:C901
